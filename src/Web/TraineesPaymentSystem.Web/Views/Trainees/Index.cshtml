@model IEnumerable<TraineesPaymentSystem.Web.Models.ViewModels.Trainees.TraineeIndexViewModel>

@{
    ViewData["Title"] = "Trainees";
}

<h1>Trainees</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>

@(Html
      .Grid(Model)
      .Build(columns =>
      {
          columns.Add(model => model.Name).Titled("Name").Css("bolded");
          columns.Add(model => model.Username).Titled("Username");
          columns.Add(model => model.Age).Titled("Age");
          columns.Add(model => model.Age).Titled("Age");

          columns.Add(model => model.CountTasks).Titled("Count Tasks");
      })
      .WithFilterMode(GridFilterMode.FilterRow)
      .Empty("No data found")
      .Filterable()
      .Sortable()
      .Pageable()
      .AppendCss("table-hover")
)

